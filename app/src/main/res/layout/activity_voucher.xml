<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.voucher.VoucherActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/voucher_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="?attr/actionBarSize"></androidx.recyclerview.widget.RecyclerView>

    <include
        android:id="@+id/progress_bar"
        layout="@layout/layout_progress_bar"
        android:visibility="gone"></include>

    <include
        android:id="@+id/no_voucher"
        layout="@layout/layout_no_vouchers"
        android:visibility="gone"></include>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lightblue_a_200" />

</FrameLayout>